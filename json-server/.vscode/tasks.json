{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "File-Server",
      "type": "shell",
      "command": "deno",
      "windows": {
        "args": [
          "run",
          "--allow-net",
          "--allow-read",
          "--allow-write",
          "mod.ts"
        ]
      },
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
  ]
}