    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Deno File Server",
            "program": "${workspaceFolder}/mod.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect=127.0.0.1:9229",
                "--allow-all",
                "--unstable"
            ],
            "attachSimplePort": 9229
        },
    ]
}